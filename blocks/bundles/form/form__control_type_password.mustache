<div class="form-group{{#has_error}} form-group_has-error{{/has_error}}">
    <label class="form-label">
        <input name="{{code}}"
               type="password"
               autocomplete="off"
               {{#html_required}}required{{/html_required}}
               class="form__control form__control_password{{#requiredCssClass}} {{.}}{{/requiredCssClass}}{{#maskCssClass}} {{.}}{{/maskCssClass}}{{#additionalCssClass}} {{.}}{{/additionalCssClass}}">
        {{#placeholder}}<span class="form__placeholder">{{.}}{{#required}}
            <span class="form__astrix">*</span>{{/required}}</span>{{/placeholder}}
        {{#show_error_message}}
            <span class="form-group__message">{{{error_message}}}</span>
        {{/show_error_message}}
    </label>
</div>